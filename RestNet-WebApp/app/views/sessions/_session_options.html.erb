
<ul id="<%=element_id = "session_options" unless element_id; element_id%>">
<%if has_session? -%>
	<li><%=link_to "Perfil", :controller=>:users, :action=>:show, :id=>user_session.user_id %></li>     
	<%if user_session.facebook_user %>
    	<li><%= link_to_function 'Terminar Sessão', 'FB.Connect.logout(function() {logout()})',:id=>"logout_link" %></li>
    <%else %>
    	<li><%=link_to "Terminar Sessão", :controller=>:sessions, :action=>:destroy %></li>
    <%end %>
	
<%else-%>
		<li><%=link_to "Criar Conta", :controller=>:users, :action=>:new %></li>
		<li></li><%=link_to "Iniciar Sessão", new_session_url %></li>
<%end-%>
 </ul>