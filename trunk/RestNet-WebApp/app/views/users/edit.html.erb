<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name%>
  </p>
  
  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </p>
  
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email%>
  </p>

<p>
    <%= f.label :handle %><br />
    <%= f.text_field :handle%>
  </p>
  
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%unless @user.facebook_user?%>
<%=link_to 'Alterar Password', :controller=>:users, :action=>:change_password, :id=>@user.id%>
<%end%>
<%= link_to 'Back', users_path %>